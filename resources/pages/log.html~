<!DOCTYPE html>
<html>
	<link type="text/css" rel="stylesheet" href="./style.css" />
	<center id="Time" style="position:center"></center>
	<title>Chat - Customer Module</title>
	<body onload="loadText();startTime();">
		<h1>
			Crimson: LOG
		</h1>
		<div id="wrapper">
			<div id="menu">
				<p class="welcome">LOG!<b></b></p>
				<p class="logout"><a id="exit" href="./basic.html">Exit Chat</a></p>
				<div style="clear:both"></div>			 
				<textarea readonly id="logbox"></textarea>
			</div>
			
			<script type="text/javascript">
				function loadText(){
					var xmlhttp, text;
					xmlhttp = new XMLHttpRequest();
					xmlhttp.open('GET', '../../log.txt', false);
					xmlhttp.send();
					text = xmlhttp.responseText;
					var chatty = document.getElementById("logbox");
					chatty.innerHTML = text;
					chatty.scrollTop = chatty.scrollHeight;
				}
			</script>
			<script>
				function startTime() {
					loadText()
					document.getElementById('Time').innerHTML = new Date()
					var t = setTimeout(startTime, 1000);
				}
			</script>
		</div>
	</body>
</html>


